<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InforFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:elevation="8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnClose"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:shadowColor="@android:color/transparent"
                android:textColorHighlight="@color/colorPrimary"
                app:icon="@drawable/ic_baseline_arrow_back_24"
                app:iconGravity="textStart"
                app:iconPadding="1dp"
                app:iconTint="@color/textBar"
                app:layout_constraintBottom_toTopOf="@+id/viewDivider"
                app:layout_constraintEnd_toStartOf="@+id/textView0"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/colorPrimary" />


            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Informação"
                android:textColor="@color/textBar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:verticalScrollbarPosition="defaultPosition"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:foregroundGravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cardView3"
                            app:layout_constraintTop_toTopOf="@+id/cardView3"
                            tools:ignore="MissingConstraints">

                            <TextView
                                android:id="@+id/txtTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:foregroundGravity="top"
                                android:gravity="top"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:text="One Piece"
                                android:textColor="@color/colorAccent"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toStartOf="@+id/favorite"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:id="@+id/favorite"
                                style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                                android:layout_width="45dp"
                                android:layout_height="0dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="@android:color/transparent"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:textColor="@android:color/transparent"
                                android:textColorHighlight="@android:color/transparent"
                                android:textColorHint="@android:color/transparent"
                                android:textColorLink="@android:color/transparent"
                                app:icon="@drawable/ic_favorite_border_black_24dp"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                app:iconTint="@color/colorAccent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.120000005" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/icon_adapter" />

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAuthor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardHome">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_account_box_24" />

                        <TextView
                            android:id="@+id/txtAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardAuthor">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="106dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_category_24" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:scrollbars="none">


                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/groupCategoriesInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:paddingRight="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView2"
                                app:singleLine="true">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipShounen"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:elevation="2dp"
                                    android:text="@string/shounen"
                                    app:chipBackgroundColor="@color/textBar"
                                    app:rippleColor="@color/colorPrimaryOpcity" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipKodomo"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:elevation="2dp"
                                    android:text="@string/kodomo"
                                    app:chipBackgroundColor="@color/textBar"
                                    app:rippleColor="@color/colorPrimaryOpcity" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipShoujo"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:elevation="2dp"
                                    android:text="@string/shoujo"
                                    app:chipBackgroundColor="@color/textBar"
                                    app:rippleColor="@color/colorPrimaryOpcity" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipEcchi"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:elevation="2dp"
                                    android:text="@string/ecchi"
                                    app:chipBackgroundColor="@color/textBar"
                                    app:rippleColor="@color/colorPrimaryOpcity" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipYaoi"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:elevation="2dp"
                                    android:text="@string/yaoi"
                                    app:chipBackgroundColor="@color/textBar"
                                    app:rippleColor="@color/colorPrimaryOpcity" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipYuri"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:elevation="2dp"
                                    android:text="@string/yuri"
                                    app:chipBackgroundColor="@color/textBar"
                                    app:rippleColor="@color/colorPrimaryOpcity" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipSeinen"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:elevation="2dp"
                                    android:text="@string/seinen"
                                    app:chipBackgroundColor="@color/textBar"
                                    app:rippleColor="@color/colorPrimaryOpcity" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipJosei"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:elevation="2dp"
                                    android:text="@string/josei"
                                    app:chipBackgroundColor="@color/textBar"
                                    app:rippleColor="@color/colorPrimaryOpcity" />
                            </com.google.android.material.chip.ChipGroup>
                        </HorizontalScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardCategory">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingLeft="12dp"
                            android:paddingTop="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_bookmark_black_24dp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="18dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Cap. Atual"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtCapCurrent"
                                android:layout_width="50dp"
                                android:layout_height="47dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="18dp"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="989"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingLeft="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_import_contacts_black_24dp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="18dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Cap. Total"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textCapTotal"
                                android:layout_width="50dp"
                                android:layout_height="47dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="18dp"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="1000"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_baseline_grade_24" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="18dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="Nota"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtGrade"
                                android:layout_width="50dp"
                                android:layout_height="47dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="18dp"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="5.0"
                                android:textSize="18sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardPopular">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_baseline_http_24" />

                        <TextView
                            android:id="@+id/txtSite"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>