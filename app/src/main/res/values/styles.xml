<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/textBar</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="background">@color/backGround</item>
        <item name="iconTint">@color/iconHeartEnable</item>
        <item name="buttonTint">@color/colorAccent</item>
        <item name="android:shadowColor">@color/backGround</item>
    </style>

    <style name="AppTheme.CardView" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:ambientShadowAlpha">0.4</item>
        <item name="android:spotShadowAlpha">0.6</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimaryDark">@color/textBar</item>


    </style>

</resources>
