<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="background">@color/backGround</item>
        <item name="iconTint">@color/iconHeartEnable</item>
        <item name="buttonTint">@color/colorAccent</item>
        <item name="android:shadowColor">@color/backGround</item>
    </style>

    <style name="AppTheme.CardView" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:ambientShadowAlpha">0.4</item>
        <item name="android:spotShadowAlpha">0.6</item>
    </style>

</resources>
